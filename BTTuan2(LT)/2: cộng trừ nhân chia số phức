#include <iostream>
using namespace std;

struct SoPhuc {
    float thuc, ao;
};

SoPhuc operator+ (SoPhuc a, SoPhuc b) {
    SoPhuc c;
    c.thuc = a.thuc + b.thuc;
    c.ao = a.ao + b.ao;
    return c;
}

SoPhuc operator- (SoPhuc a, SoPhuc b) {
    SoPhuc c;
    c.thuc = a.thuc - b.thuc;
    c.ao = a.ao - b.ao;
    return c;
}

SoPhuc operator* (SoPhuc a, SoPhuc b) {
    SoPhuc c;
    c.thuc = a.thuc * b.thuc - a.ao * b.ao;
    c.ao = a.thuc * b.ao + a.ao * b.thuc;
    return c;
}

SoPhuc operator/ (SoPhuc a, SoPhuc b) {
    SoPhuc c;
    c.thuc = (a.thuc * b.thuc + a.ao * b.ao) / (b.thuc * b.thuc + b.ao * b.ao);
    c.ao = (a.ao * b.thuc - a.thuc * b.ao) / (b.thuc * b.thuc + b.ao * b.ao);
    return c;
}

void Xuat(SoPhuc a) {
    if (a.ao > 0) {
        cout << a.thuc << "+" << a.ao << "i" << endl;
    } else if (a.ao == 0) {
        cout << a.thuc << endl;
    } else {
        cout << a.thuc << a.ao << "i" << endl;
    }
}

int main() {
    SoPhuc a, b;
    cin >> a.thuc >> a.ao >> b.thuc >> b.ao;
    SoPhuc c = a + b;
    Xuat(c);
    c = a - b;
    Xuat(c);
    c = a * b;
    Xuat(c);
    c = a / b;
    Xuat(c);
    return 0;
}
